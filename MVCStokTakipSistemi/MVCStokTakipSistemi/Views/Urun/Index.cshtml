@using MVCStokTakipSistemi.Models.Entity;
@model List<TBLURUN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainlayout.cshtml";
}

<table  class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach(var urun in Model)
            {
            <tr>
                <th>@urun.URUNID</th>
                <td>@urun.URUNAD</td>
                <td>@urun.URUNMARKA</td>
                <td>@urun.URUKATEGORİ</td>
                <td>@urun.FİYAT</td>
                <td>@urun.STOK</td>
                <td><a href="/Urun/Sil/@urun.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urun/Guncelle/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
            }
    </tbody>
</table>
<a href="/Urun/UrunEkle" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
